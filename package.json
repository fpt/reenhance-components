{
  "name": "reenhance-components",
  "version": "0.2.5",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpt/reenhance-components"
  },
  "author": "Youichi Fujimoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fpt/reenhance-components/issues"
  },
  "keywords": [
    "react",
    "components",
    "toolkit",
    "utilities",
    "declarative"
  ],
  "description": "A collection of react nodes which provide functional operation",
  "scripts": {
    "clean": "rm -rf dist umd coverage examples/dist",
    "build": "NODE_ENV=production sh -c 'npm run clean && tsc && webpack -p'",
    "lint": "tslint 'src/**/*.ts{,x}'",
    "start": "NODE_ENV=development sh -c 'webpack-dev-server --mode development --port 3300'",
    "test": "tsc --noEmit && jest",
    "test:badges": "npm test && jest-coverage-badges"
  },
  "dependencies": {
    "recompose": "^0.27",
    "rxjs": "^6.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.12",
    "@types/fetch-jsonp": "^1.0.0",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/jest": "^23.3.0",
    "@types/react-dom": "^16.0",
    "@types/recompose": "^0.26",
    "@types/webpack": "^3.8.1",
    "@types/webpack-dev-server": "^2.9.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "fetch-jsonp": "^1.1.3",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.4.1",
    "jest-coverage-badges": "^1.0.0",
    "jest-enzyme": "^6.0.2",
    "react": "^16.3.1",
    "react-dom": "^16.3",
    "react-test-renderer": "^16.4.1",
    "styled-components": "^3.3.3",
    "ts-jest": "^23.0",
    "ts-loader": "^4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-react": "^3.2.0",
    "typescript": "^3",
    "webpack": "^4",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3"
  },
  "engines": {
    "node": "8.x",
    "yarn": "1.x"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "dist",
    "package.json",
    "umd"
  ],
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/__tests__/setup.ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.spec\\.tsx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!src/index.ts",
      "!src/**/__tests__/*.ts?(x)"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "reenhance-components": "<rootDir>/src/index.ts"
    },
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
