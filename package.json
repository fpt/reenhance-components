{
  "name": "reenhance-components",
  "version": "0.0.7",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpt/reenhance-components"
  },
  "author": "Youichi Fujimoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fpt/reenhance-components/issues"
  },
  "keywords": [
    "react",
    "components",
    "toolkit",
    "utilities",
    "declarative"
  ],
  "description": "A collection of react nodes which provide functional operation",
  "scripts": {
    "clean": "rm -rf dist umd examples/dist",
    "build": "NODE_ENV=production sh -c 'npm run clean && tsc && webpack -p'",
    "lint": "tslint 'src/**/*.ts{,x}'",
    "start": "NODE_ENV=development sh -c 'webpack-dev-server --port 3300'",
    "test": "tsc --noEmit && jest"
  },
  "dependencies": {
    "react": "^16.3",
    "recompose": "^0.26.0",
    "rxjs": "^6"
  },
  "devDependencies": {
    "@types/react-dom": "^16.0",
    "@types/recompose": "^0.26",
    "@types/jest": "^21.1.8",
    "@types/webpack": "^3.8.1",
    "@types/webpack-dev-server": "^2.9.2",
    "@types/html-webpack-plugin": "^2.30.3",
    "react-dom": "^16.3",
    "jest": "^23.4",
    "npm-run-all": "^4.1.3",
    "typescript": "^2.9",
    "ts-loader": "^3.5.0",
    "ts-jest": "^23.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-react": "^3.2.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.9.5",
    "html-webpack-plugin": "^3.2.0"
  },
  "engines": {
    "node": "8.x",
    "yarn": "1.x"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "package.json",
    "umd"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "reenhance-components": "<rootDir>/src/index.ts"
    },
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
