{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots" : ["./typings"],
    "types": ["jest"],
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "webpack.config.ts",
    "**/__tests__/**/*"
  ]
}
