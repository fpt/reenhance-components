{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots" : ["./typings"],
    "types": ["jest"],
    "declaration": true,
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest",
    "examples"
  ],
  "types": [
    "typePatches"
  ]
}
